
@{
    ViewBag.Title = "Receiver";
}

<h2>Receiver</h2>

<p>This view subscribes to the WidgetHub</p>

<div data-ng-controller="WidgetCtrl">
    <ul>
        <li data-ng-repeat="widget in widgets">
            ID {{widget.ID}}: {{widget.Color}} {{widget.Shape}}
        </li>
    </ul>
</div>

<hr/>
<p>Second Widget</p>
<div data-ng-controller="ComponentCtrl">
    <ul>
        <li data-ng-repeat="component in components">
            ID {{component.ID}}: {{component.Color}} {{component.Shape}}
        </li>
    </ul>
</div>

@section Scripts {
    <!-- Reference the autogenerated SignalR hub script -->
    <script src="~/signalr/hubs"></script>
}
